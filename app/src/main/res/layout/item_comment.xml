<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/search_edit_round">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_head_portrait"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/my_avatar"
        app:border_color="@color/design_default_color_primary_dark"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/comment_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NickName:"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/comment_commenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Email Address:"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPurple"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:hint="Text:"
            android:lineSpacingMultiplier="1.3" />

        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Time:"
            android:textSize="15sp"
            android:textColor="@color/colorPurple" />


    </LinearLayout>

</LinearLayout>