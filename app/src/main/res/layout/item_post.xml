<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.campustransaction.user_post.widget.ShapeXfermodeImageView
        android:id="@+id/image_post"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sxiv_border_color="@color/design_default_color_primary_dark"
        app:sxiv_radius="20dp" />

    <TextView
        android:id="@+id/title_post_price"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="Price"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/image_post"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_post" />

    <TextView
        android:id="@+id/title_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:textSize="15sp"
        android:text="Title"
        android:paddingBottom="20dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="@+id/image_post"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/title_post_price" />

</androidx.constraintlayout.widget.ConstraintLayout>