<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <com.example.campustransaction.user_post.widget.ShapeXfermodeImageView
        android:id="@+id/image_post"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sxiv_border_color="@color/colorWhite"
        app:sxiv_radius="10dp" />

    <TextView
        android:id="@+id/title_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Title"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="@+id/image_post"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="textStart"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintTop_toBottomOf="@+id/image_post"/>

    <TextView
        android:id="@+id/title_post_price"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="$ Price"
        android:textAlignment="textStart"
        android:textColor="@color/colorRed"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintEnd_toEndOf="@+id/image_post"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_title"/>



</androidx.constraintlayout.widget.ConstraintLayout>